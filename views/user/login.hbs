<div class="row">
<div class="col-md-6 m-auto">
        <h4>Login to your account</h4>

<form action="/login" method="post">
{{#if loginErr}}
<p class="error">Invalid username or passsword!!</p>
{{/if}}
  <div class="form-group">
    <label for="exampleInputEmail1">Email address</label>
    <input type="email" class="form-control" name="emailid" aria-describedby="emailHelp" placeholder="Enter email">
    
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Password</label>
    <input type="password" class="form-control" name="password" placeholder="Password">
  </div>
  <div class="form-group form-check">
    <a href="/signup" class="form-alert-link" for="exampleCheck1">Create new account</a>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
</div>
</div>