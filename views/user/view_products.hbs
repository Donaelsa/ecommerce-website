 <section>
        <div class="container mt-5">
        <div class="row">
            {{#each products}}
            <div class="col-md-3 p-3">
                <div class="card" style="width: 15rem;height:35rem;">
  <img style="width:200px;height:250px;" class="card-img-top" src="/product_images/{{this._id}}.jpg" alt="Card image cap">
  <div class="card-body">
    <h5 class="card-title">{{this.name}}</h5>
    <p class="card-text">{{this.description}}</p>
    <h8 class="card-title">{{this.price}}</h8>
     <!--<a href="/add_to_cart/{{this._id}}" >Add to cart</a>-->
    <button onclick="addToCart('{{this._id}}')" class="btn btn-primary">Add to cart</button>
  </div>
</div>
            </div>  
            {{/each}}     
        </div>
        </div>
