<section>
    <div class="container">
        <div class="row mt-4">
            <a href="/admin/add_product/" class="btn btn-success ml-auto">Add Product</a>
        </div>
        <!--<table class="table mt-5">-->
          <table id="myTable" class="display">

  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Category</th>
      <th scope="col">Image</th>
      <th scope="col">Description</th>
      <th scope="col">Price</th>
      <th>#</th>
      <th>#</th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
    
    <tr>
      <th scope="row">1</th>
      <td>{{this.name}}</td>
      <td>{{this.category}}</td>
      <td><img style="width:50px;height:50px" src="/product_images/{{this._id}}.jpg" alt="no image"></td>
      <td>{{this.description}}</td>
      <td>{{this.price}}</td>
      <td><a href="/admin/edit_product/{{this._id}}" class="btn btn-info">Edit</a></td>
      <td><a href="/admin/delete_product/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete {{this.name}}?')">Delete</a></td>
    </tr>
    {{/each}}
  </tbody>
</table>
    </div>
</section>
<script>
  $(document).ready( function () {
    $('#myTable').DataTable();
} );
</script>